.scroll-top
  width 40px
  height 41px
  //border 1px solid black
  position relative
  overflow hidden
  background-color #f5f5f5
  cursor pointer
.scroll-logo
  display inline-block
  width 22px
  height 24px
  //border 1px solid black
  position absolute
  top 50%
  left 50%
  margin-top -12px
  margin-left -11px
  background url("../../images/Z-scrolltop.png") no-repeat
  background-size 22px 24px
.scroll-word
  width 40px
  height 41px
  font-size 14px
  color #777
  position absolute
  top 0px
  left 0
  z-index 5
  text-align center
  overflow hidden
  background-color #f5f5f5
  display none


