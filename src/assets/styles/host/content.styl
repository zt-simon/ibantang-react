.content-wrap
  width 100%
  margin 0
  background-color white
  //border 1px solid black
  padding 10px 0 10px
.content-type
  width 950px
  height 78px
  margin 40px auto 20px
  cursor pointer
  //border 1px solid black
.content-type ul li
  display inline-block
  margin 0 10px 15px 0
  list-style none
  height 24px
  padding 0px 5px
  line-height 24px
  width 50px
  text-align center
  border-radius 12px
.content-typelist li:first-child
  background-color #fd6363
  color white
.content-typelist li:last-child
  width 80px
  height 24px
.content-detail
  width 950px
  overflow hidden
  //margin-bottom 20px
  margin 0 auto 20px
.content-first
  margin 0 14px 25px 0
  float left
  width 300px
  height 250px
  background-color white
.content-first a
  text-decoration none
.content-img
  width 300px
  height 165px
  overflow hidden
.content-pic
  width 300px
  height 165px
.content-pic:hover{
  transform scale(1.1)
  transition all 0.5s
}
.content-title
  color black
  font-size 16px
  padding-top 15px
  font-weight lighter
  overflow hidden
  width 100%
.content-info
  overflow hidden
  margin-top 20px
.content-nick
  overflow hidden
  line-height 24px
  width 100px
  height 24px
  float left
.content-nickimg
  background url("../../images/Z-nick.jpg") no-repeat
  background-size 24px 24px
  width 24px
  height 24px
  float left
  border-radius 50%
.content-nickname
  float left
  font-size 12px
  color #999
.content-state
  width 150px
  height 24px
  float right
  line-height 24px
  color #999
  vertical-align baseline
.content-infoViews
  display inline-block
  width 14px
  height 14px
  background url("../../images/Z-views.png") no-repeat bottom
  background-size 14px 14px
  margin 0 10px 0 5px
.content-infoLikes
  display inline-block
  width 14px
  height 14px
  background url("../../images/Z-likes.png") no-repeat bottom
  background-size 14px 14px
  margin 0 5px 0 25px
.content-more
  width 400px
  height 42px
  text-align center
  float left
  margin 30px 250px
  line-height 42px
  font-size 14px
  border-radius 42px
  background-color #f5f5f5
  cursor pointer