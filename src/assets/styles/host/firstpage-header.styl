.about-wrapper
  position fixed
  top 0
  left 0
  width 100%
  z-index 20
.about-header
  width 100%
  height 60px
  min-width 1030px
  max-width 1440px
  //border 1px solid black
  margin auto
.about-left
  width 453px
  height 44px
  //border 1px solid black
  float left
  margin-left 40px
.about-left:after
  content ""
  display block
  clear both
  visibility hidden
.about-leftBantangWhite
  display block
  width 47px
  height 24px
  background url("../../images/Z-BANTANG.png")
  background-size 47px 24px
  margin-right 20px
.about-leftBantangRed
  display block
  width 47px
  height 24px
  background url('../../images/logo.png') 0 -23px no-repeat
  background-size 47px 47px
  margin-right 20px
.about-left div
  float left
  margin 16px 20px 0 10px
  position relative
.about-left div a
  font-size 14px
  width 28px
  height 28px
  line-height 28px
  text-decoration none
  color white
  font-weight lighter
.about-left div i
  display inline-block
  width 36px
  height 35px
  background url("../../images/Z-new.png") no-repeat
  background-size 36px 35px
  margin-top -20px
  position absolute
  left 30px
  top 5px
.about-right
  float right
  width 380px
  height 30px
  //border 1px solid black
  margin 13px 40px 0 0
  position relative
.about-right:after
  content ""
  display block
  clear both
  visibility hidden
.about-searchInput
  position absolute
  top 0
  right 100px
.about-right input
  //width 168px
  height 28px
  border-radius 14px
  padding 0 0 0 30px
  margin-right 30px
  outline none
  background-color rgba(0,0,0,0)
  border 1px solid white
  color white
  transition all 1s
.about-search::-webkit-input-placeholder
  color white
.about-search1::-webkit-input-placeholder
  color #bfbfbf
.about-searchInput a
  width 16px
  height 16px
  display inline-block
  position absolute
  top 6px
  left 10px
  //border 1px solid black
.about-newImg
  background url("../../images/download-1.png") no-repeat -48px -116px
  background-size 200px 150px
.about-newPic
  background url("../../images/download-1.png") no-repeat -48px 0px
  background-size 200px 150px
.about-login
  float right
  width 100px
  height 30px
  line-height 30px
  text-align center
  color #fd6363
  background-color white
  border-radius 15px
  font-size 14px
  font-weight lighter


